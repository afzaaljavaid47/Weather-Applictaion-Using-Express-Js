{{>Header}}
<section id="output-screen">
    <div class="container text-center">
        <div class="row">
            {{#each dbData}}     
                <div class="col-md-4">
                    <div class="box mt-4 mb-2">
                        <div class="top-box d-flex justify-content-between">
                            <p id="todayDay"></p>
                            <p>{{this.localTime}}</p>
                        </div>
                        <p>{{this.weatherTest}}<img src='https:{{this.icon}}' /></p>
                        <p class="degree">{{this.weatherDegree}}&deg;C</p>
                        <p>{{this.country}}, {{this.state}}, {{this.city}}</p>
                        <div class="botton-box d-flex justify-content-between">
                            <p id="todayDay"></p>
                            <a href="/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this record?');" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>
<script>
    var dayName= new Date().toLocaleDateString('en-US', {weekday: 'long'})
    console.log(dayName)
    document.getElementById('todayDay').innerText=dayName;
 </script>
{{>Footer}}